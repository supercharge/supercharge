<div class="col-4">
    {{> user/profile-sidebar}}
</div>

<div class="col-8">
    <div class="card">
        <form method="POST">
            <div class="card-header">
                <div class="card-header-icon">
                    <i class="nav-icon fas fa-user-shield text-primary"></i>
                </div>
                Update Your Password
            </div>

            <div class="card-body">
                {{#if successmessage}}
                    <div class="alert alert-success" role="alert">
                        {{successmessage}}
                    </div>

                {{/if}}

                {{csrf}}

                <div class="form-group">
                    <label class="label {{#if errors.password}}text-danger{{/if}}" for="email">
                        {{#if errors.password}} {{errors.password.message}} {{else}}Current Password{{/if}}
                    </label>
                    <input class="form-control {{#if errors.password}}is-invalid{{else}}{{#if
                                 password}}is-valid{{/if}}{{/if}}" type="password" placeholder="Your current password" id="password"
                        name="password">
                </div>

                <div class="form-group">
                    <label class="label {{#if errors.newPassword}}text-danger{{/if}}" for="email">
                        {{#if errors.newPassword}} {{errors.newPassword.message}} {{else}}New Password{{/if}}
                    </label>
                    <input class="form-control {{#if errors.newPassword}}is-invalid{{else}}{{#if
                                 newPassword}}is-valid{{/if}}{{/if}}" type="password" placeholder="Your new password" id="newPassword"
                        name="newPassword">
                </div>

                <div class="form-group">
                    <label class="label {{#if errors.newPasswordConfirm}}text-danger{{/if}}" for="email">
                        {{#if errors.newPasswordConfirm}} {{errors.newPasswordConfirm.message}} {{else}}Confirm New Password{{/if}}
                    </label>
                    <input class="form-control {{#if errors.newPasswordConfirm}}is-invalid{{else}}{{#if
                                 newPasswordConfirm}}is-valid{{/if}}{{/if}}" type="password" placeholder="Confirm your new password"
                        id="newPasswordConfirm" name="newPasswordConfirm">
                </div>

            </div>

            <div class="card-footer">
                <button class="btn btn-primary" type="submit">Update Password</button>
            </div>

        </form>
    </div>
</div>
