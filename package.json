{
  "name": "supercharge",
  "description": "Supercharge application boilerplate",
  "version": "1.0.0-beta8",
  "dependencies": {
    "@koa/cors": "3.1.0",
    "@supercharge/contracts": "0.0.0",
    "@supercharge/core": "0.0.0",
    "@supercharge/routing": "0.0.0",
    "@supercharge/strings": "~1.15.1",
    "reflect-metadata": "~0.1.13"
  },
  "devDependencies": {
    "@supercharge/tsconfig": "~1.0.0",
    "@types/koa__cors": "~3.0.2",
    "@types/node": "~14.14.7",
    "@typescript-eslint/eslint-plugin": "~4.7.0",
    "eslint": "~7.13.0",
    "eslint-config-standard": "~16.0.1",
    "eslint-config-standard-with-typescript": "~19.0.1",
    "eslint-plugin-import": "~2.22.1",
    "eslint-plugin-node": "~11.1.0",
    "eslint-plugin-promise": "~4.2.1",
    "eslint-plugin-standard": "~4.1.0",
    "nodemon": "~2.0.6",
    "typescript": "~4.0.5"
  },
  "engines": {
    "node": ">= 12"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "nodemon --watch './**/*.ts' --exec 'ts-node' server.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run build && npm run lint && npm run test:run",
    "test:run": "echo 'Missing tests.' && exit 1"
  }
}
